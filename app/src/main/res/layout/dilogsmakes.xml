<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5pt"
            android:background="@drawable/dilogdign"
            android:elegantTextHeight="true"
            android:freezesText="false"
            android:gravity="center_horizontal"
            android:text="Game Result"
            android:textColor="#040202"
            android:textColorHint="#090909"
            android:textSize="35dp"
            android:textStyle="bold|italic"
            app:autoSizeTextType="none" />

        <TextView
            android:id="@+id/winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:text="Player 1 Win The Game"
            android:textColor="#070404"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/dilogedigen1"
                android:text="Exit"
                android:textColor="#050303"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playagain"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/diloge4"
                android:text="Play Again"
                android:textColor="#070404"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>